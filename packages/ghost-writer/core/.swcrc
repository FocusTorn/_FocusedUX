{
    "jsc": {
        "target": "es2017",
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "decoratorMetadata": true,
            "legacyDecorator": true
        },
        "keepClassNames": true,
        "externalHelpers": true,
        "loose": true
    },
    "module": {
        "type": "nodenext"
    },
    "sourceMaps": true,
    "exclude": [
        ".*\\.spec.tsx?$",
        ".*\\.test.tsx?$",
        ".*\\.vite.tsx?$",
        ".*.js$"
    ]
}
