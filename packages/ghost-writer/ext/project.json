{
    "name": "@fux/ghost-writer-ext",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/ghost-writer/ext/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/packages/ghost-writer/ext",
                "main": "packages/ghost-writer/ext/src/extension.ts",
                "tsConfig": "packages/ghost-writer/ext/tsconfig.json",
                "assets": [],
                "bundle": true,
                "platform": "node",
                "external": ["vscode"],
                "format": ["cjs"],
                "clean": true
            },
            "configurations": {
                "development": {
                    "minify": false
                },
                "production": {
                    "minify": true
                }
            }
        },
        "lint": {}
    }
}
